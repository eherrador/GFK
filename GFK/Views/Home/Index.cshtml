@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Inicio";
}

@section Scripts {
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBKrYfy_u54SVqRIHexktyaMEX8FWhmSio&sensor=FALSE&libraries=drawing"></script>
